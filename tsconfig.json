{
	"compilerOptions": {
		"target": "es2015",
		"jsx": "react",
		"lib": ["es6", "es2016", "es2017", "es2018", "es2019", "dom"],
		"module": "commonjs",
		"esModuleInterop": true,
		"jsxFactory": "Snabbdom.createElement",
		"declaration": true,
		"outDir": "./lib",
		"noImplicitAny": true,
		"strictNullChecks": false,
		"strict": true,
		"typeRoots": ["declarations.d.ts"]
	},
	"include": ["src", "declarations.d.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
